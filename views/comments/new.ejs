<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">Add New Comment To: <%= campground.name %></h1>
	<div class="row">
		<div class="col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin: 20px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Text">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="comment[rating]" placeholder="Rating (Out of 5)">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>