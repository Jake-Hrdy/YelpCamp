<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">Edit Comment</h1>
	<div class="row">
		<div class="col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin: 20px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="comment[rating]" value="<%= comment.rating %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Update</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground_id %>">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>