<%- include("partials/header") %>

<div class="container">
	<h1 class="display-4 text-dark text-center">SIGN UP</h1>
	<div class="row">
		<div class="col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin: 20px auto;">
			<form action="/register" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="username" placeholder="Username">
				</div>
				<div class="form-group">
					<input class="form-control" type="password" name="password" placeholder="Password">
				</div>
				<button class="btn btn-lg btn-outline-light btn-submit btn-block">Sign Up</button>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer") %>