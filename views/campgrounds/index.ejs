<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<h1 class="display-4">YelpCamp Campgrounds</h1>
		<p class="lead">View our hand-picked campgrounds from all over the world</p>
		<hr>
		<a class="btn btn-outline-dark btn-lg" href="/campgrounds/new">Add New Campground</a>
	</header>

	<div class="row text-center">
		<% campgrounds.forEach(function(campground) { %>
		
<!-- <div class="shadow-sm p-3 mb-5 bg-white rounded">Small shadow</div>
<div class="shadow p-3 mb-5 bg-white rounded">Regular shadow</div>
<div class="shadow-lg p-3 mb-5 bg-white rounded">Larger shadow</div> -->
		
			<div class="col-lg-3 col-sm-6">
				<div class="card p-1 mb-4 bg-dark">
					<img class="card-img-top" src="<%= campground.image %>">
					<div class="card-body">
						<h4 class="text-light card-title"><%= campground.name %></h4>
						<a class="text-light btn btn-outline-light" href="/campgrounds/<%= campground._id %>">
							<span class="more-info">
								More Info
							</span>
						</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<%- include("../partials/footer") %>