<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center display-4 text-dark">Edit <%= campground.name %></h1>
	<div class="row">
		<div class="col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin: 20px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" 
						   placeholder="Name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="campground[price]"
						   placeholder="Price (per night)" value="<%= campground.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]"
						   placeholder="Image" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]"
						   placeholder="Description" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[website]"
						   placeholder="Camp Website (put '#' if no website)" value="<%= campground.website %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" id="location"
						   placeholder="Location (Google Maps)" value="<%= campground.location %>">
				</div>	
				<div class="form-group">
					<button class="btn btn-lg btn-outline-light btn-submit btn-block">Submit</button>
				</div>
			</form>
			<a class="go-back" href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>