<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center text-dark display-4">Create a New Campground</h1>
	<div class="row">
		<div class="col-9 col-sm-8 col-md-6 col-lg-5 col-xl-4" style="margin: 20px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Campground Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price"
						   placeholder="Price (per night)" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="website" placeholder="Camp Website (put '#' if no website)">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location"
						   id="location" placeholder="Location (Google Maps)">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-outline-light btn-submit btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds" class="go-back">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>